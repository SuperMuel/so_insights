{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/api.py",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "run",
                "uvicorn",
                "src.api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "frontend/app.py",
                "--server.port",
                "8000"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/frontend"
            },
            "justMyCode": true
        },
    ],
    "compounds": [
        {
            "name": "API/Frontend",
            "configurations": [
                "Run Backend",
                "Run Frontend"
            ],
            "stopAll": true
        }
    ]
}