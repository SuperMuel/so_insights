{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "src.api:app",
                "--reload",
                "--reload-dir",
                "${workspaceFolder}/shared",
                "--reload-dir",
                "${workspaceFolder}/backend"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "consoleName": "Backend"
        },
        {
            "name": "Run Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}/frontend",
            "args": [
                "run",
                "app.py",
                "--server.port",
                "8501",
                "--server.address",
                "localhost"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "consoleName": "Frontend"
        },
        {
            "name": "Run Analyzer",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "cwd": "${workspaceFolder}/analyzer",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "watch"
            ]
        }
    ],
    "compounds": [
        {
            "name": "API/Frontend",
            "configurations": [
                "Run Backend",
                "Run Frontend"
            ],
            "stopAll": true
        }
    ]
}